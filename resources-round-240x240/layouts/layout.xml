    <!-- Right-hand activity monitoring -->
    <label id="StepsLabel" x="190" y="45" text="1000" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_RIGHT" color="Gfx.COLOR_BLUE" />
    <bitmap id="StepsImage" filename="../drawables/ic_directions_run_24px.png" x="200" y="53" />
    <drawable id="StepsGoal" class="ProgressBar">
